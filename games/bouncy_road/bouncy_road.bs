    assess_inputs 0
    rest 24
    enable_pause 1
    rest 24
    run gameplay_set_tutorial D_089d0e80
    play_music s_f_even_road_seqData
    rest 24
    rest 24
    rest 24
    rest 24
    run func_080175b0, 0
    loop_start
        run beatscript_disable_loops 0
        bouncy_road_enable_ball_goal_sfx
        bouncy_road_deploy_ball 24
